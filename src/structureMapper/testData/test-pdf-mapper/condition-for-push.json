  "schema": [
    {
      "conditions": [
        {
          "equal": ["@client.version", 1]
        }
      ],
      "for": {
        "path": ["@claims.codes", "@motors.codes"],
        "count": 2
      },
      "push":{
        "key": "filesKey",
        "data": {
          "clientname": "@client.name",
          "street": "@client.address.street",
          "allClaimsAndMotors": {
            "code1": "$elem[0].code",
            "code2": "$elem[1].code",
            "name": "$elem.$parent.name",
            "name1": "$elem[0].$parent.name",
            "name2": "$elem[1].$parent.name"

          },
          "motors":[
            {
              "name": "@motors[0].name"
            },
            {
              "name": "@motors[1].name"
            }
          ]
        }
      }
    }
  ],

